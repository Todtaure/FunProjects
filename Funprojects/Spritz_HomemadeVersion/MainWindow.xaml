<Window x:Class="Spritz_HomemadeVersion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="InputBox" Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=TextReadInput, Mode=OneWayToSource}" 
                 HorizontalAlignment="Left" Height="239" Margin="10,10,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="231"/>
        <Button Content="Read" HorizontalAlignment="Left" Margin="215,269,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
